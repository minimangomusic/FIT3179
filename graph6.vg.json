{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Energy and danceability per genre",
  "width": 600,
  "height": 600,
  "background": "beige",
  "data": {
    "url": "spotify_genre.csv"
  },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "danceability",
      "type": "quantitative",
      "scale": {"zero": false}, 
      "title": "Danceability"
    },
    "y": {
      "field": "energy",
      "type": "quantitative",
      "scale": {"zero": false},
      "title": "Energy"
    },
    "color": {"field": "Genre", "type": "nominal"},
    "shape": {"field": "Genre", "type": "nominal"},
    "size": "1"
  }
}


