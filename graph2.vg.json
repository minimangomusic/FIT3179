{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"title": { "text": "track lengths of spotify songs by genre" },
"data": {
"url": "spotify.csv"
},
"mark": "bar",
"encoding": {
"x": { "aggregate": "mean", "field": "duration_ms", "type": "quantitative" },
"y": { "field": "Genre", "type": "nominal" }

}
  "layer": [{
    "mark": {
      "type": "text",
      "align": "left",
      "baseline": "middle",
      "dx": 3
    },
    "encoding": {
      "text": {"field": "duration_ms", "type": "quantitative"}
    }
  }]
}
