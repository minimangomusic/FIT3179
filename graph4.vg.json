{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"title": { "text": "Genre most likely to chart -> Genres with less than 10 songs omitted" },
"width": 600,
"height": 600,
 "background": "beige",
"data": {
"url": "spotify_genre.csv"
},
 "encoding": {
    "theta": {"field": "count", "type": "quantitative", "stack": true, "sort": "descending"},
    "color": {"field": "Genre", "type": "nominal", "legend": null}
  },
  "layer": [{
    "mark": {"type": "arc", "outerRadius": 200}
  }, {
    "mark": {"type": "text", "radius": 250},
    "encoding": {
      "text": {"field": "Genre", "color": "black", "type": "nominal"}
    }
  }]
}





